{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@env/*": ["environments/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"],
      "@state/*": ["src/state/*"],
      "@utils/*": ["src/utils/*"],
      "@tests/*": ["src/__tests__/*"]
    },
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": ["src", "custom.d.ts"]
}
